<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.funkynoodles.FXMLMainController">
   <children>
       <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
       	<menus>
       		<Menu text="File">
               <items>
                  <MenuItem accelerator="Ctrl N" text="New" />
                  <MenuItem accelerator="Ctrl O" text="Open" />
                  <MenuItem accelerator="Ctrl S" text="Save" />
                  <MenuItem accelerator="Ctrl Shift S" text="Save As" />
                  <SeparatorMenuItem />
                  <MenuItem onAction="#handleExitAction" text="Exit" />
               </items>
            </Menu>
            <Menu text="Edit">
               <items>
                  <MenuItem text="Copy" />
                  <MenuItem text="Cut" />
                  <MenuItem text="Paste" />
               </items>
            </Menu>
            <Menu text="Help">
               <items>
                  <MenuItem disable="true" text="Search" />
                  <MenuItem text="Online Manual" visible="false" />
                  <SeparatorMenuItem />
                  <MenuItem text="About" />
               </items>
            </Menu>
       	</menus>
       </MenuBar>

       <TabPane>
   		<tabs>
   			<Tab text="Accounts">

			</Tab>
   			<Tab text="PNC">
      <content>
      				<GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
      				    <padding>
      				        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      				    </padding>
         <children>

         				    <Label style="-fx-font: NORMAL 20 Arial" text="Book" GridPane.columnIndex="0" GridPane.rowIndex="0" />

         				    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
         					    <columns>
         							<TableColumn text="Date">
							</TableColumn>
         							<TableColumn text="Amount">
							</TableColumn>
         							<TableColumn prefWidth="125.0" text="Catagroies">
							</TableColumn>
         							<TableColumn text="Detail">
							</TableColumn>
         					     </columns>
         				    </TableView>
                        <GridPane hgap="10.0" vgap="10.0" GridPane.rowIndex="2">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField promptText="Detail" GridPane.columnIndex="1" />
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <DatePicker promptText="Date" />
                                    <TextField alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="180.0" promptText="Amount">
                                       <opaqueInsets>
                                          <Insets />
                                       </opaqueInsets>
                                       <padding>
                                          <Insets left="10.0" />
                                       </padding>
                                    </TextField>
                                 </children>
                              </HBox>
                              <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
         </children>
                     <columnConstraints>
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
      				</GridPane>
      </content>
   			</Tab>
   		</tabs>



       </TabPane>
   </children>


</VBox>
