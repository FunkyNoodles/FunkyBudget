<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.funkynoodles.FXMLChartTabController">
   <padding>
      	<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
   <top>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="31.0" text="Asset" />
            <ComboBox fx:id="assetComboBox" prefWidth="150.0" />
            <Label prefHeight="31.0" text="Period" />
            <ComboBox fx:id="periodComboBox" prefWidth="150.0" />
            <Label fx:id="fromLabel" prefHeight="31.0" text="From" visible="false" />
            <DatePicker fx:id="fromDatePicker" visible="false" />
            <Label fx:id="toLabel" prefHeight="31.0" text="To" visible="false" />
            <DatePicker fx:id="toDatePicker" visible="false" />
            <Label fx:id="invalidDateLabel" prefHeight="31.0" text="Invalid Dates Order!" textFill="#d00000" visible="false" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="31.0" text="Chart Type" />
                  <ComboBox fx:id="chartTypeComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <Button fx:id="generateButton" onAction="#handleGenerateButton" mnemonicParsing="false" text="Generate" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox fx:id="centerVBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
