<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" prefHeight="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.funkynoodles.FXMLChartTabController">
   <padding>
      	<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
   <top>
      <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0" styleClass="border-pane" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="31.0" text="Period" />
            <ComboBox fx:id="periodComboBox" prefWidth="150.0" />
            <Label fx:id="fromLabel" prefHeight="31.0" text="From" visible="false" />
            <DatePicker fx:id="fromDatePicker" visible="false" />
            <Label fx:id="toLabel" prefHeight="31.0" text="To" visible="false" />
            <DatePicker fx:id="toDatePicker" visible="false" />
            <Label fx:id="invalidDateLabel" prefHeight="31.0" text="Invalid Dates Order!" textFill="#d00000" visible="false" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="border-pane" stylesheets="@stylesheet.css" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label text="Chart Settings">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label prefHeight="31.0" text="Asset" />
                        <Label prefHeight="31.0" text="Chart Type" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="assetComboBox" prefWidth="150.0" />
                        <ComboBox fx:id="chartTypeComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#handleGenerateButton" text="Generate" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
